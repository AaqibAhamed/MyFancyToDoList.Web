@model IEnumerable<MyFancyToDoList.Web.Models.ToDoList>

@{
    ViewBag.Title = "My Fancy To DoList";
}

<h2>My Fancy ToDo List</h2>
<h3>Active ToDo [@Model.Count()]</h3>




<p>
    @Html.ActionLink("Add New Todo Item", "Create")
</p>
<p>
    @Html.ActionLink("Completed Task","Completed")
</p>
<table class="table">
    <tr>

        @*<th>
            @Html.DisplayNameFor(model => model.IsCompleted)
        </th>*@

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsReOccuring)
        </th>
    </tr>

@foreach (var item in Model) 
{
<tr>
    @*<td>
        @Html.DisplayFor(modelItem => item.IsCompleted)
    </td>*@

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DueDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsReOccuring)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
